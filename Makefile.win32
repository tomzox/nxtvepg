#	$(NM) $(TCLDIR)/lib/libtcl$(TCL_L).a | \
#	  egrep '^(........|................) [T] _' | sed 's/[^_]*_//' >> $@
#
#libtk$(TCL_L).def: $(TCLDIR)/lib/libtk$(TCL_L).a
#	@echo EXPORTS > $@
#	$(NM) $(TCLDIR)/lib/libtk$(TCL_L).a | \
